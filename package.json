{
  "name": "poker-notes",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "build": "meteor build ./build --directory && cd ./build/bundle/programs/server && npm install --omit=dev",
    "prod": "./scripts/run-prod.sh",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@babel/runtime": "^7.23.5",
    "@swc/helpers": "^0.5.17",
    "@vueuse/core": "^14.1.0",
    "date-fns": "^4.1.0",
    "meteor-node-stubs": "^1.2.12",
    "primeicons": "^7.0.0",
    "primevue": "^4.5.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.3.9",
    "vue-i18n": "^11.2.8",
    "vue-meteor-tracker": "^3.0.0-beta.7",
    "vue-router": "^4.2.5"
  },
  "meteor": {
    "modern": true,
    "mainModule": {
      "client": "client/entry-meteor-client.ts",
      "server": "server/entry-meteor-server.ts"
    },
    "testModule": "tests/main.ts"
  },
  "devDependencies": {
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@tailwindcss/vite": "^4.1.11",
    "@trivago/prettier-plugin-sort-imports": "^6.0.1",
    "@types/meteor": "^2.9.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "meteor-vite": "^3.2.1",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vue-tsc": "^3.2.1"
  }
}
